{
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "command": "clang++",
            "args": [
                "-g",
                "${file}",
                "-O2",
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-DDEBUG",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}.exe",
            ],
            "options": {
                "cwd": "${fileDirname}"
            }
        },
    ],
    "version": "2.0.0"
}